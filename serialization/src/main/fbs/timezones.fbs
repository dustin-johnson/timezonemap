namespace us.dustinj.timezonemap.serialization.flatbuffer;

table TimeZone {
    timeZoneName:string;
    regions:[Polygon];
}

table Polygon {
    rings:[Ring]; // First ring is the outer boundary, any others are holes in the boundary.
}

table Ring {
    firstPoint: AnchorPoint;
    subsequentPoints:[DeltaPoint];
}

struct AnchorPoint {
    latitude:int32;
    longitude:int32;
}

struct DeltaPoint {
    latitude:int32;
    longitude:int32;
}

root_type TimeZone;